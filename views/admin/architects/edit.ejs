<%- include ('../../partials/admin-header') %>
<%- include ('../../partials/admin-navbar') %>

<section id="new-architects" class="new-architects">
    <div class="container">
        <hr>
        <form method="POST"  action="/architects/update" enctype="multipart/form-data">
            <input type="hidden" value="<%= architect.id %>" name="id">
            <input type="hidden" value="<%= architect.image %>" name="image">
            
            <div class="card">
                <div class="card-header">
                    <h2>Editar Arquiteto <%= architect.name %></h2>
                </div>
                <div class="card-body">
                    
                    <div class="div-image-preview">
                        <label for="image"><strong>Imagem do Arquiteto:</strong></label><br>
                        <div class="image-preview-div">
                            <label for="image">
                                <img id="file-preview" alt="Preview da Imagem" src="/static/uploads/<%= architect.image %>" class="image-preview">   
                            </label>
                        </div>
                    </div>
                    <input type="file" id="image" name="image" onchange="document.getElementById('file-preview').src = window.URL.createObjectURL(this.files[0])"><br><br>

                    <label for="name"><strong>Nome:</strong></label>
                    <input class="form-control" name="name" type="text" value="<%= architect.name %>"><br>

                    <label for="role"><strong>Função:</strong></label>
                    <input class="form-control" name="role" type="text" value="<%= architect.role %>"><br>   

                    <label for="whatsappLink"><strong>Link do Whatsapp:</strong></label>
                    <input class="form-control" name="whatsappLink" type="text" value="<%= architect.whatsappLink %>"><br>

                    <label for="instagramLink"><strong>Link do Instagram:</strong></label>
                    <input class="form-control" name="instagramLink" type="text" value="<%= architect.instagramLink %>"><br>

                    <label for="facebookLink"><strong>Link do Facebook:</strong></label>
                    <input class="form-control" name="facebookLink" type="text" value="<%= architect.facebookLink %>"><br>

                    <label for="description"><strong>Descrição:</strong></label>
                    <textarea class="form-control" name="description" id="description" cols="30" rows="10"><%= architect.description %></textarea>

                </div>
                <input class="create-btn" type="submit" value="Atualizar" style="border-radius: 0px 0px 5px 5px;">
            </div>
        </form>
    </div>
</section>

<%- include ('../../partials/admin-footer') %>